					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var firstname = pm.variables.replaceIn(\"{{$randomFirstName}}\")\r",
							"console.log(firstname)\r",
							"pm.environment.set(\"Fname\", firstname)\r",
							"\r",
							"var lastname = pm.variables.replaceIn(\"{{$randomLastName}}\")\r",
							"console.log(lastname)\r",
							"pm.environment.set(\"Lname\", lastname)\r",
							"\r",
							"var price = pm.variables.replaceIn(\"{{$randomInt}}\")\r",
							"console.log(price)\r",
							"pm.environment.set(\"Tprice\", price)\r",
							"\r",
							"var adineeds = pm.variables.replaceIn(\"{{$randomProduct}}\")\r",
							"console.log(adineeds)\r",
							"pm.environment.set(\"Additionalneeds\", adineeds)\r",
							"\r",
							"\r",
							"\r",
							"const moment = require('moment')\r",
							"const today = moment()\r",
							"var checkin = today.add(5, 'd').format(\"YYYY-MM-DD\")\r",
							"pm.environment.set(\"checkin\", checkin)\r",
							"\r",
							"var checkout = today.add(10, 'd').format(\"YYYY-MM-DD\")\r",
							"pm.environment.set(\"checkout\", checkout)"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n\t\"firstname\" : \"{{Fname}}\",\r\n\t\"lastname\" : \"{{Lname}}\",\r\n\t\"totalprice\" : \"{{Tprice}}\",\r\n\t\"depositpaid\" : \"true\",\r\n\t\"bookingdates\" : {\r\n    \t\"checkin\" : \"{{checkin}}\",\r\n    \t\"checkout\" : \"{{checkout}}\"\r\n\t},\r\n\t\"additionalneeds\" : \"{{Additionalneeds}}\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/booking/",
